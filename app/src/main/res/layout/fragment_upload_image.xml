<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uploaded_image_fragment_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true"
    >

    <ProgressBar
        android:id="@+id/progress_bar_circular"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        tools:progress="60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar_circular"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar_circular"
        app:layout_constraintStart_toStartOf="@+id/progress_bar_circular"
        app:layout_constraintTop_toTopOf="@+id/progress_bar_circular"
        tools:text="60%" />


    <com.edmodo.cropper.CropImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:background="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/select_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/upload_image_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <Button
        android:id="@+id/upload_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/upload_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select_image_btn"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <Button
        android:id="@+id/rotate_left_button"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/ic_logo_rotate_left_foreground"
        app:layout_constraintBottom_toTopOf="@+id/select_image_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        app:layout_constraintVertical_bias="0.14" />

    <Button
        android:id="@+id/rotate_right_button"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/ic_logo_rotate_right"
        app:layout_constraintBottom_toTopOf="@+id/upload_image_btn"
        app:layout_constraintStart_toEndOf="@+id/rotate_left_button"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>