<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.kristiania.android.reverseimagesearchapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ReverseImageSearchApp"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_logo_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_image_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.SplashScreen">
        <activity
            android:name="no.kristiania.android.reverseimagesearchapp.presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.SplashScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".presentation.service.ProgressBarService" />
        <service android:name=".presentation.service.ResultImageService" />
    </application>

</manifest>